{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": "off",
        "quotes": [
			"error",
			"single"
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"padding-line-between-statements": [
			"error",
			{
				"blankLine": "always",
				"prev": "block-like",
				"next": "*"
			}
		],
		"no-console": "error",
		"@typescript-eslint/strict-boolean-expressions": "warn",
        "@typescript-eslint/indent": ["error", "tab"]
    }
}
